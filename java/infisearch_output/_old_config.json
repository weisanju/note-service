{
  "fields_config": {
    "fields": {
      "_relative_fp": {},
      "body": {
        "weight": 1.0
      },
      "h1": {
        "weight": 2.0
      },
      "heading": {
        "weight": 1.5
      },
      "headingLink": {
        "weight": 1.4
      },
      "link": {},
      "title": {
        "weight": 2.0
      }
    }
  },
  "indexing_config": {
    "exclude": [
      "infi_search.json",
      "print.html",
      "404.html",
      "morsels_config.json"
    ],
    "loaders": {
      "HtmlLoader": {
        "exclude_selectors": [
          "script,style,form,nav,[data-infisearch-ignore]"
        ],
        "merge_default_selectors": true,
        "selectors": {
          "body": {
            "field_name": "body"
          },
          "h1": {
            "field_name": "h1"
          },
          "h1,h2,h3,h4,h5,h6": {
            "attr_map": {
              "id": "headingLink"
            },
            "field_name": "heading"
          },
          "meta[name=\"description\"],meta[name=\"keywords\"]": {
            "attr_map": {
              "content": "body"
            }
          },
          "span[data-infisearch-link]": {
            "attr_map": {
              "data-infisearch-link": "link"
            }
          },
          "title": {
            "field_name": "title"
          }
        }
      }
    },
    "with_positions": true
  },
  "lang_config": {
    "lang": "chinese"
  }
}